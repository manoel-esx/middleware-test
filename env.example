# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Sistemas Externos
# Sistema A
EXTERNAL_SYSTEM_A_URL=https://api.sistema-a.com
EXTERNAL_SYSTEM_A_API_KEY=your_api_key_here
EXTERNAL_SYSTEM_A_TIMEOUT=5000

# Sistema B
EXTERNAL_SYSTEM_B_URL=https://api.sistema-b.com
EXTERNAL_SYSTEM_B_API_KEY=your_api_key_here
EXTERNAL_SYSTEM_B_TIMEOUT=5000

# Sistema C
EXTERNAL_SYSTEM_C_URL=https://api.sistema-c.com
EXTERNAL_SYSTEM_C_API_KEY=your_api_key_here
EXTERNAL_SYSTEM_C_TIMEOUT=5000

# Configurações de Retry
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Configurações de Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000
